{
  "name": "ts-monorepo",
  "description": "Template for setting up a TypeScript monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "docs": "doctoc --title '**Table of content**' README.md",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "pub": "lerna publish",
    "test": "lerna run test",
    "lint": "eslint --ext js,ts,tsx ."
  },
  "devDependencies": {
    "doctoc": "~2.0.0",
    "eslint": "~7.26.0",
    "eslint-plugin-import": "~2.22.1",
    "lerna": "~4.0.0",
    "react": "~17.0.0",
    "typescript": "~4.2.0"
  }
}
